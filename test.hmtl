<!DOCTYPE html>
<html lang="ms">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard Utama</title>
    <!-- Tailwind CSS CDN -->
    <script src="https://cdn.tailwindcss.com"></script>
    <!-- Chart.js CDN -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap">
    <style>
        body { font-family: 'Inter', sans-serif; }
        .kpi-card {
            background-color: #1F2937; /* bg-gray-800 */
            border-radius: 0.75rem; /* rounded-xl */
            padding: 1.5rem; /* p-6 */
            border: 1px solid #374151; /* border-gray-700 */
        }
    </style>
</head>
<body class="bg-gray-900 text-white">

    <div class="container mx-auto p-4 md:p-8">
        <!-- Navigasi -->
        <nav class="bg-gray-800 p-4 rounded-xl mb-8">
            <ul class="flex items-center justify-center space-x-4 md:space-x-6">
                <li><a href="index.html" class="text-white font-bold bg-gray-700 px-3 py-2 rounded-md">Dashboard</a></li>
                <li><a href="ecommerce.html" class="text-gray-300 hover:text-white hover:bg-gray-700 px-3 py-2 rounded-md">eCommerce</a></li>
                <li><a href="marketing.html" class="text-gray-300 hover:text-white hover:bg-gray-700 px-3 py-2 rounded-md">Marketing</a></li>
                <li><a href="salesteam.html" class="text-gray-300 hover:text-white hover:bg-gray-700 px-3 py-2 rounded-md">Sales Team</a></li>
            </ul>
        </nav>

        <header class="text-center mb-8">
            <h1 class="text-4xl font-bold">Dashboard Utama</h1>
            <p class="text-gray-400 mt-2">Ringkasan prestasi perniagaan anda.</p>
        </header>

        <!-- Bahagian KPI (Key Performance Indicators) -->
        <section class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
            <div class="kpi-card text-center">
                <h3 class="text-lg font-semibold text-gray-400">Jumlah Jualan (Sales)</h3>
                <p id="total-sales" class="text-4xl font-bold text-green-400 mt-2">RM 0.00</p>
            </div>
            <div class="kpi-card text-center">
                <h3 class="text-lg font-semibold text-gray-400">Purata ROAS</h3>
                <p id="avg-roas" class="text-4xl font-bold text-blue-400 mt-2">0.00x</p>
            </div>
            <div class="kpi-card text-center">
                <h3 class="text-lg font-semibold text-gray-400">Leads Per Agent</h3>
                <p id="leads-per-agent" class="text-4xl font-bold text-purple-400 mt-2">0</p>
            </div>
        </section>

        <!-- Bahagian Graf -->
        <section class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-8">
            <div class="bg-gray-800 p-6 rounded-xl border border-gray-700">
                <h2 class="text-xl font-semibold mb-4">Graf Jualan (eCommerce vs Sales Team)</h2>
                <canvas id="salesChart"></canvas>
            </div>
            <div class="bg-gray-800 p-6 rounded-xl border border-gray-700">
                <h2 class="text-xl font-semibold mb-4">Graf Agihan Leads Mengikut Agent</h2>
                <canvas id="leadsChart"></canvas>
            </div>
        </section>

        <!-- Bahagian Jadual Data -->
        <section class="bg-gray-800 p-6 rounded-xl border border-gray-700">
            <h2 class="text-xl font-semibold mb-4">Semua Data Terkini</h2>
            <div class="overflow-x-auto">
                <table class="w-full text-left">
                    <thead class="bg-gray-700">
                        <tr>
                            <th class="p-3">Tarikh</th>
                            <th class="p-3">Jenis Data</th>
                            <th class="p-3">Metrik 1</th>
                            <th class="p-3">Metrik 2</th>
                            <th class="p-3">Metrik 3</th>
                            <th class="p-3">Metrik 4</th>
                            <th class="p-3">Metrik 5</th>
                            <th class="p-3">Metrik 6</th>
                        </tr>
                    </thead>
                    <tbody id="data-table-body" class="divide-y divide-gray-700">
                        <!-- Data akan dimasukkan oleh JavaScript -->
                        <tr>
                            <td colspan="8" class="text-center p-8 text-gray-500">Memuatkan data...</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </section>

    </div>

    <!-- Firebase SDK -->
    <script type="module">
        // Import fungsi yang diperlukan dari SDK
        import { initializeApp } from "https://www.gstatic.com/firebasejs/11.6.1/firebase-app.js";
        import { getFirestore } from "https://www.gstatic.com/firebasejs/11.6.1/firebase-firestore.js";
        import { getAuth, signInAnonymously, onAuthStateChanged } from "https://www.gstatic.com/firebasejs/11.6.1/firebase-auth.js";

        // Konfigurasi Firebase anda
        // GANTIKAN DENGAN KONFIGURASI PROJEK FIREBASE ANDA
        // Your web app's Firebase configuration
        // For Firebase JS SDK v7.20.0 and later, measurementId is optional
        const firebaseConfig = {
            apiKey: "AIzaSyANOj0x2Y2zpfaRR9tiLQxQ6BvFT1yGS04",
            authDomain: "kilangdm-v1.firebaseapp.com",
            projectId: "kilangdm-v1",
            storageBucket: "kilangdm-v1.firebasestorage.app",
            messagingSenderId: "264191193800",
            appId: "1:264191193800:web:0f3d9f25b9694c16bdabfd",
            measurementId: "G-C02S0CPE63"
        };

        // Inisialisasi Firebase
        const app = initializeApp(firebaseConfig);
        const db = getFirestore(app);
        const auth = getAuth(app);

        // Login secara anonymous untuk membenarkan akses ke Firestore
        onAuthStateChanged(auth, (user) => {
            if (user) {
                console.log("User is signed in anonymously:", user.uid);
            } else {
                signInAnonymously(auth).catch((error) => {
                    console.error("Anonymous sign-in failed:", error);
                });
            }
        });

        // Jadikan 'db' boleh diakses secara global untuk skrip lain
        window.db = db;
    </script>

    <!-- Skrip Dashboard -->
    <script type="module" src="/js/dashboard.js"></script>

</body>
</html>
